<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/menuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu:"
        android:textAllCaps="false"
        android:textSize="100sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/AddTacoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddDrinkButton"
        android:layout_width="406dp"
        android:layout_height="133dp"
        android:text="Add Drink"
        android:textAllCaps="true"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf='@+id/ProceedToCart'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddSideButton" />

    <Button
        android:id="@+id/ProceedToCart"
        android:layout_width="700dp"
        android:layout_height="100dp"
        android:text="Proceed To Cart"
        android:textAllCaps="true"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddDrinkButton" />

    <Button
        android:id="@+id/AddSideButton"
        android:layout_width="406dp"
        android:layout_height="133dp"
        android:text="Add Side"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/AddDrinkButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddTacoButton" />

    <Button
        android:id="@+id/AddTacoButton"
        android:layout_width="406dp"
        android:layout_height="133dp"
        android:text="Add Taco"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/AddSideButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuText" />

</androidx.constraintlayout.widget.ConstraintLayout>